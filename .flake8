# .flake8
[flake8]
max-line-length = 88

# Donâ€™t even scan these directories
exclude =
    .venv/,
    venv/,
    __pycache__/,
    tests/,
    research/,
    strategy/

# If there are still a couple stray errors in your app code you can
# per-file-ignore them here
per-file-ignores =
    backtest.py: E303,E305,E501
    broker.py: E302,E501
    main.py: F841
    meta_optimize.py: W292
    config_manager.py: E302,E501,F841
    data/news.py: E302