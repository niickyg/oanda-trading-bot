[flake8]
max-line-length = 88

# Skip virtualenv, tests, research, and CI config
exclude =
    .venv/,
    venv/,
    __pycache__/,
    tests/,
    research/,
    .github/

# Per-file ignores for remaining files
per-file-ignores =
    backtest.py: E303,E305,E501
    broker.py: E302,E501
    main.py: F841
    meta_optimize.py: W292
    config_manager.py: E302,E501,F841
    data/news.py: E302
    strategy/auto_strategy_generator.py: E302,E305,E501,W291