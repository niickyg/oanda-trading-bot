# .flake8
[flake8]
max-line-length = 88

# Skip virtualenv, git metadata, and any folders with third-party code
exclude =
    .venv/,
    .git/,
    __pycache__/,
    build/,
    dist/

# Per-file ignores for your own code:
per-file-ignores =
    backtest.py: E303,E305,E501
    broker.py: E302,E501
    main.py: F841
    meta_optimize.py: W292
    config_manager.py: E302,E501,F841
    data/news.py: E302
    research/auto_strategy_generator.py: E302,E305,E501,W291
    research/run_research.py: E265,E302,E305,E501,W291